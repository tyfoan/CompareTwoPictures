        <Image HorizontalAlignment="Left" Name="img2" Height="350" Margin="231,10,0,0" VerticalAlignment="Top" Width="200" Grid.RowSpan="2"/>

        <Image HorizontalAlignment="Left" Name="img3" Height="350" Margin="442,10,0,0" VerticalAlignment="Top" Width="200" Grid.RowSpan="2"/>
        <Button Content="OpenFile1" HorizontalAlignment="Left" Margin="36,166,0,0" Grid.Row="1" VerticalAlignment="Top" Width="150" Height="30" Click="btnOpenFile_Click"/>
        <Button Content="OpenFile2" HorizontalAlignment="Left" Margin="259,166,0,0" Grid.Row="1" VerticalAlignment="Top" Width="150" Height="30" Click="btnOpenFile2_Click"/>

    </Grid>
</Window>
