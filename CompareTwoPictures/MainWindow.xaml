        Title="MainWindow" Height="450" Width="660">
    <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>        
        
        <Button Content="GetResult" HorizontalAlignment="Left" Margin="466,166,0,0" Grid.Row="1" VerticalAlignment="Top" Width="150" Height="30" Click="Button_Click"/>

